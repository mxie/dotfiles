[user]
  name = Melissa Xie

[core]
  excludesfile = ~/.gitignore

[color]
  ui = auto
  interactive = auto
  branch = auto
  diff = auto
  status = auto

[color "status"]
  untracked = cyan

[alias]
  a = add -v
  aa = add -Av
  am = commit -v --amend
  ap = add -p
  b = branch
  cah = commit --amend -C HEAD
  cf = config
  cm = commit -v
  co = checkout
  d = diff
  dc = diff --cached
  dm = diff master
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  m = merge --ff-only
  nb = checkout -b
  p = push
  pop = stash pop
  r = rebase -i
  rim = rebase -i master
  sf = show --name-only
  st = status
  uncommit = reset HEAD^
  unfuck = reset --hard
  unstage = reset HEAD

  con = !git add -A && git rebase --continue
  # delete any local branches that have already been merged
  db = !git branch --merged | grep -v master | xargs git branch -d
  # Merge current branch into master, only if it's a fast-forward. Doesn't check
  # out master if it's not a FF merge.
  mm = !test `git rev-parse master` = $(git merge-base HEAD master) && git checkout master && git merge HEAD@{1} || echo "Non-fastforward"
  pr = !git push -f && gh pull-request -o
  up = !git fetch origin && git checkout master && git merge origin/master && git checkout - && git rebase origin/master

[push]
  # Push current branch even if you've never pushed it before
  default = current

[help]
  autocorrect = 1

[hub]
  protocol = https
