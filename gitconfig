[user]
  name = Melissa Xie

[color]
  branch = auto
  diff = auto
  status = auto

[alias]
  aa = add -Av
  cam = commit --amend
  b = branch
  cah = commit --amend -C HEAD
  cf = config
  cm = commit
  co = checkout
  con = !git add -A && git rebase --continue
  d = diff
  dc = diff --cached
  dm = diff master
  m = merge
  nb = checkout -b
  p = push
  pop = stash pop
  pr = !git push -f && git pull-request -o
  r = rebase
  sf = show --name-only
  st = status
  undo = reset HEAD^
  un = reset HEAD
  unfuck = reset --hard
  up = !git fetch origin && git checkout master && git merge origin/master && git checkout - && git rebase origin/master
  # Merge current branch into master, only if it's a fast-forward. Doesn't check
  # out master if it's not a FF merge.
  mm = !test `git rev-parse master` = $(git merge-base HEAD master) && git checkout master && git merge HEAD@{1} || echo "Non-fastforward"
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[push]
  # Push current branch even if you've never pushed it before
  default = current
