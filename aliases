# unix
alias mkdir='mkdir -p'
alias ls="ls -Gp"
alias now='date -u "+%Y%m%d%H%M%S"'

# git
alias g="git"
alias gwork="git config --local user.email $WORK_EMAIL"
alias gpers="git config --local user.email $PERSONAL_EMAIL"
alias ga="git add"
alias gb="git branch"
alias gcm="git commit -m"
alias gco="git checkout"
alias gd="git diff"
alias gcon="git add -A && git rebase --continue"
# delete any local branches that have already been merged
alias gdb="git branch --merged | grep -v master | xargs git branch -d"
alias gl="git lg"
alias gmm="git mm"
alias gnb="git checkout -b"
alias gp="git push"
alias gpop="git stash pop"
alias gpr="git push -f && git pull-request -o"
alias gr="git rebase"
alias gsf="git show --name-only"
alias gshow="git show"
alias gst="git status"
alias gstash="git stash"
alias gup="git up"

# postgres
alias db-restore='pg_restore --verbose --clean --no-acl --no-owner -d'

# heroku
alias h=heroku
alias db-copy-staging-to-local='h pgbackups:capture -r staging && curl `h pgbackups:url -r staging` | db-restore `db-development-name`'

# bundler
alias b="bundle"
alias bi="bundle install"
alias be="bundle exec"
alias bu="bundle update"

# rubygems
alias gi="gem install"
alias giv="gem install -v"

# rails
alias migrate="rake db:migrate && rake db:rollback && rake db:migrate && rake db:migrate RAILS_ENV=test"
alias rrg="bundle exec rake routes | ag"
alias dr='diff_routes'

# heroku staging
alias staging='heroku open staging'
alias staging-console='heroku run console --remote staging'
alias staging-process='watch heroku ps --remote staging'
alias staging-releases='heroku releases --remote staging'
alias staging-tail='heroku logs --tail --remote staging'

alias p='powder'
alias upbrew='brew update && brew upgrade && brew cleanup'

# tmux
alias tn="tmux new-session -s"
alias ta="tmux attach-session -t"
