# unix
alias mkdir='mkdir -p'
alias ls="ls -Gp"
alias now='date -u "+%Y%m%d%H%M%S"'
alias gpg="gpg2"

# git
alias gitsh="gitsh --git $(which hub)"
alias g="git"
alias gwork="git config --local user.email $WORK_EMAIL"
alias gpers="git config --local user.email $PERSONAL_EMAIL"
alias ga="git add"
alias gb="git branch"
alias gd="git diff"
alias gl="git log"
alias gm="git merge"
alias gp="git push"
alias gr="git rebase"

# bundler
alias b="bundle"
alias bi="bundle install"
alias be="bundle exec"
alias bu="bundle update"

# rubygems
alias gi="gem install"
alias giv="gem install -v"

# rails
alias mg="be rake db:migrate && be rake db:migrate RAILS_ENV=test"
alias rrg="bundle exec rake routes | ag"
alias dr='diff_routes'
alias rb="RAILS_ENV=test be rake db:rollback && be rake db:rollback"

# homebrew
alias upbrew='brew update && brew upgrade && brew cleanup'

# tmux
alias tn="tmux new-session -s"
alias ta="tmux attach-session -t"
#
# other shortcuts
alias v="vagrant"
alias h="heroku"
